# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mice_db

# JWT Secret (최소 32자 이상의 랜덤 문자열 권장)
# 생성 방법: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-here-min-32-chars

# Server
PORT=5050
NODE_ENV=development

# Frontend URL (CORS 설정)
# 개발: http://localhost:3000
# 프로덕션: https://your-frontend-domain.vercel.app
FRONTEND_URL=http://localhost:3000

# Allowed Origins (CORS - 콤마로 구분)
# 여러 origin을 허용하려면: http://localhost:3000,https://your-frontend-domain.vercel.app
ALLOWED_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=info
